<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_layout"
    android:background="@drawable/gradient_animation">

    <TextView
        android:id="@+id/text"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Núcleo de Estudantes de Engenharia"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/text_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Informática"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/text"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/text_gradient"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cli_background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/comandos_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spantext"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="guest@neei:/home/guest$"
                android:textColor="@color/white" />

            <!-- Adicione um EditText para mostrar a saída -->
            <EditText
                android:id="@+id/command_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="try me"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/output_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </RelativeLayout>

    <!-- Adicione o TextView abaixo do RelativeLayout anterior -->
</RelativeLayout>
