<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundnight">

        <!-- Núcleo de Engenharia Informática do Instituto Politécnico de Tomar -->

        <!-- Título "Sobre Nós" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp"
            >
        <ImageView
            android:id="@+id/imgNucleo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/logo_final" />
            <ImageView
                android:id="@+id/imgIpt"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/iptlogo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Licenciatura Engenharia Informática"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desenvolvimento de Aplicações Móveis"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023/2024"
            android:textColor="@color/white"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">
        <LinearLayout
            android:id="@+id/llGoncalo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/tvDevelopersTitle"
            android:gravity="center">

            <!-- A imagem será carregada programaticamente no código Kotlin -->
            <ImageView
                android:id="@+id/imageGoncalo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_equipa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gonçalo Costa"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23692"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llJoao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llGoncalo"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageJoao"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_equipa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="João Gonçalves"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23882"
                android:textColor="@color/white"
                />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Bibliotecas Adicionais Usadas"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"/>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/cli_background"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Título do Documento -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CompactCalendarView"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <!-- Descrição do Documento -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SundeepK"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/white"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                                <!-- Data do Documento -->
                                <TextView
                                    android:layout_width="220dp"
                                    android:layout_height="wrap_content"
                                    android:text="Biblioteca usada para permitir a vista de eventos (pontos) dentro do calendário"
                                    android:textSize="17sp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginEnd="16dp"
                                    android:textColor="@color/white"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="end"
                                android:layout_marginTop="5dp">

                                <ImageView
                                    android:id="@+id/gitBttn"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/ic_github"
                                    android:contentDescription="Download"
                                    android:layout_gravity="bottom"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/underlineBackgroundImage"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:src="@drawable/underline"
                            android:layout_marginTop="10dp">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Utilizadores"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/cli_background"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_admin_pfp"
                        android:padding="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Título do Documento -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Username: jmrrg"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <!-- Descrição do Documento -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Password: 123"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/white"/>

                                <!-- Data do Documento -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Administrador"
                                    android:textSize="17sp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginEnd="16dp"
                                    android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/cli_background"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_student_pfp"
                        android:padding="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Título do Documento -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Username: costa"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <!-- Descrição do Documento -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Password: 123"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/white"/>

                        <!-- Data do Documento -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aluno"
                            android:textSize="17sp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="16dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
